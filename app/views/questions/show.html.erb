<div class="container">
  <div class="row">
    <h2><%= @question.title %></h2>
    <div class="col-xs-10">
      <p><%= @question.description %></p>
    </div>
  </div>
<!-- respuestas list-->
<div class="row">
  <h3><%= @question.answers.count %> Respuestas</h3>
  <hr>
  <% @question.answers.each do |answer|  %>
      <div class="col-xs-10">
        <div class="panel panel-default">
          <header class="panel-heading">Respondió <%= answer.user.email %> hace <%= answer.created_at %></header>
          <div class="panel-body"><%= answer.body %></div>
        </div>
      </div>
    <% end %>
  </div>
<!-- new respusta -->
<div class="row">
  <hr>

  <% if user_signed_in? %>
  <h3>Tú Respuesta</h3>
   <%= form_for [@question, @question.answers.build] do |f| %>

      <div class="col-xs-9">
        <div class="form-group">
          <%= f.text_area :body, class:"form-control", size:"60x12", placeholder:"Escribe tú respuesta" %>
        </div>
        <div class="form-group">
          <%= f.submit "Enviar Respuesta", class:"btn btn-primary" %>
        </div>

      </div>

    <% end %>
  <% end %>
    </div>
</div>
