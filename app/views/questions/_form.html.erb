<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h3>Nueva Pregunta</h3>
      <%= form_for  @question do |f|%>
        <div class="form-group">
          <%= f.text_field :title, class:"form-control", placeholder:"Titulo de la pregunta"   %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class:"form-control", size:"60x12", placeholder:"Redacta tu pregunta" %>
        </div>
        <div class="form-group">
          <%= f.submit "Preguntar", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
