<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h3><%= form_title %></h3>
      <% if @question.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      <%= form_for  @question do |f|%>
        <div class="form-group">
          <%= f.text_field :title, class:"form-control", placeholder:"Titulo de la pregunta"   %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class:"form-control", size:"60x12", placeholder:"Redacta tu pregunta" %>
        </div>
        <div class="form-group">
          <%= f.submit form_submit, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
