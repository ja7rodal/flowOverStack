<%= form_for [commentable, Comment.new] do |f| %>
  <hr>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", placeholder: "Escribe tu comentario" %>
  </div>
  <div class="form-group">
    <%= f.submit value:"Comentar", class: "btn btn-primary pull-right" %>
  </div>
<% end %>
